        flex-wrap: wrap;
        margin-left: auto;
        margin-right: auto;
        width: 350px;
        height: 350px;
    }

    .orderId{
        font-family: 'Barlow Condensed', sans-serif;
        text-align: center;
        font-size: 30px;
        font-weight: bold;
    }

