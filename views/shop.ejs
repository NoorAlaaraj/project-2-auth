<%  allProducts.forEach(p => { %>
    
     <li><%= p.orderId %></li><br>
     <img src="<%= p.photo %>" style="height:200px;width:200px;" >
     <li><%= p.description %></li><br>
     <li><%= p.price %> BHD </li><br>

        <form action="/users/cart/<%= p.id %>" method="post">
            <button type="submit">ADD TO CART</button>
        </form>
<%   })  %>

